                                <p>Giá: <span>@Model.objProduct.Price VNĐ</span></p>
                            </div>

                            <div class="manufacturedate">
                                <p>Ngày sản xuất: <span>@Model.objProduct.manufacturedate  </span></p>
                            </div>

                            <div class="expiry">
                                <p>Hạn sử dụng: <span>@Model.objProduct.expiry</span></p>
                            </div>
                            <div class="available">
                            </div>
                            <div class="share-desc">
                                <div class="share">
                                    <p>Share Product :</p>
                                    <ul>
                                        <li><a href="#"><img src="~/Content/images/facebook.png" alt="" /></a></li>
                                        <li><a href="#"><img src="~/Content/images/twitter.png" alt="" /></a></li>
                                    </ul>
                                </div>
                                @using (Html.BeginForm("AddToCart", "ShoppingCart", new { id = Model }))
                                {
                                    <div class="button"><span><a href="@Url.Action("AddToCart","ShoppingCart", new {Id = Model.objProduct.IdProduct})">Thêm vào giỏ hàng</a></span></div>
                                }

                                <div class="clear"></div>
                            </div>
                            <div class="wish-list">
                                <ul>
                                    <li class="wish"><a href="#">Add to Wishlist</a></li>
                                    <li class="compare"><a href="#">Add to Compare</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                



                <div class="product_desc">
                    <div id="horizontalTab">
                        <div class="clear"></div>
