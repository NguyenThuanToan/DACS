@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/Site.css")
}
<div class="main">
    <div class="content">
        <div class="content_top">
            @*<div class="back-links">
                <p><a href="index.html">Home</a>
            </div>*@
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <!--Các model được đổi thành item-->
               
                    <div class="product-details">
                        <img src="~/Content/images/@Model.objProduct.ImageProduct" />
                        <div class="desc span_3_of_2">
                            <h2>@Model.objProduct.NameProduct </h2>
                            <p>@Model.objProduct.DescriptionProduct</p> <!--Chỉ cần thêm objProduct vào và điều chỉnh lại cái thư viện-->
