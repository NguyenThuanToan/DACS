@model DACS.Models.Employee

@{
    ViewBag.Title = "Delete";
}



<h3>Bạn muốn xóa người này?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vị trí
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.Position1)
        </dd>

        <dt>
            Tên nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberPhone)
        </dd>

        <dt>
            Giới tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

        <dt>
            Hình ảnh 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imageEmployee)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
