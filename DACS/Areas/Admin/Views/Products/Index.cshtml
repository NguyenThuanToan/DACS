@model IEnumerable<DACS.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm một sản phẩm", "Create")
</p>
<div class="row" style="width:100%">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                </div>
                <div class="panel-body">
                    <p><strong>Tên sản phẩm: </strong>@item.NameProduct</p>
                    <p><strong>Thể loại: </strong>@item.Category.NameCategory</p>
                    <img style="align-self:center;" alt="@item.NameProduct"
                         src="~/Content/images/@item.ImageProduct" width="125" height="150" />
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        @Html.ActionLink("Chi tiết", "Details", "Products", new { id = item.IdProduct }, new
                        {
                        @class = "btn btn-default"
                        })
                        @Html.ActionLink("Xóa", "Delete", "Products", new { id = item.IdProduct }, new
                        {
                            @class =
                        "btn btn-success"
                        })
                        @Html.ActionLink("Sửa", "Edit", "Products", new { id = item.IdProduct }, new
                        {
                            @class =
                        "btn btn-success"
                        })
                       
                    </div>
                </div>
            </div>
        </div>
    }
</div>