@model DACS.Models.Product

@{
    ViewBag.Title = "Delete";
}


<h3>Bạn muốn xóa sản phẩm?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Thể loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.NameCategory)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameProduct)
        </dd>

        <dt>
            Mô tả sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescriptionProduct)
        </dd>

        <dt>
            Số lượng sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantityOfProduct)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Tình trạng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StatusProduct)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
           <img /> <a href="~/Content/images/@Model.ImageProduct"> </a>
        </dd>

        <dt>
            Ngày sản xuất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.manufacturedate)
        </dd>

        <dt>
            Hạn sử dụng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.expiry)
        </dd>

        <dt>
            Thương hiệu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageBrand)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
