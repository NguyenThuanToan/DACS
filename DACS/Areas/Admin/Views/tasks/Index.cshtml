@model IEnumerable<DACS.Models.task>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý công việc</h2>
<div style="width:100%">


    <p>
        @Html.ActionLink("Thêm công việc", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Mã nhân viên
            </th>
            <th>
                Tên nhân viên
            </th>
            <th>
                Vai trò
            </th>
            <th>
                ID
            </th>
            <th>
                Nhiệm vụ chính
            </th>
            <th>
                Ngày thực hiện
            </th>
            <th>
                Tiến trình
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.idNv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Position.Position1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.IdPos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateofduty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.process)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.EmployeeName }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.EmployeeName }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.EmployeeName })
                </td>
            </tr>
        }

    </table>
</div>